<?xml version="1.0" encoding="utf-8"?>
<GridLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:columnCount="4"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview"
        android:layout_gravity="center"
        android:text="CALCULATOR"
        android:textColor="#0F4C43"
        android:textSize="40dp"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/e1"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:hint="Result"
            android:layout_columnSpan="4"
            android:layout_gravity="fill_horizontal">

        </EditText>


    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu1"
            android:backgroundTint="#CB0B6A81"
            android:onClick="NumberEvent"
            android:layout_margin="3dp"
            android:text="1" />
        <Button
            android:id="@+id/bu2"
            android:backgroundTint="#CB0B6A81"
            android:layout_margin="3dp"
            android:onClick="NumberEvent"
            android:text="2" />
        <Button
            android:id="@+id/bu3"
            android:backgroundTint="#CB0B6A81"
            android:layout_margin="3dp"
            android:onClick="NumberEvent"
            android:text="3"
            />
        <Button
            android:id="@+id/sum"
            android:backgroundTint="#CB0B6A81"
            android:layout_margin="3dp"
            android:onClick="OperatorEvent"
            android:text="+"
            />
    </GridLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu4"
            android:backgroundTint="#CB0B6A81"
            android:layout_margin="3dp"
            android:onClick="NumberEvent"
            android:text="4"
            />
        <Button
            android:id="@+id/bu5"
            android:backgroundTint="#CB0B6A81"
            android:layout_margin="3dp"
            android:onClick="NumberEvent"
            android:text="5"
            />
        <Button
            android:id="@+id/bu6"
            android:backgroundTint="#CB0B6A81"
            android:layout_margin="3dp"
            android:onClick="NumberEvent"
            android:text="6"
            />
        <Button
            android:id="@+id/sub"
            android:backgroundTint="#CB0B6A81"
            android:layout_margin="3dp"
            android:onClick="OperatorEvent"
            android:text="-"
            />
    </GridLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bu7"
            android:backgroundTint="#CB0B6A81"
            android:layout_margin="3dp"
            android:onClick="NumberEvent"
            android:text="7"
            />
        <Button
            android:id="@+id/bu8"
            android:backgroundTint="#CB0B6A81"
            android:layout_margin="3dp"
            android:onClick="NumberEvent"
            android:text="8"
            />
        <Button
            android:id="@+id/bu9"
            android:backgroundTint="#CB0B6A81"
            android:layout_margin="3dp"
            android:onClick="NumberEvent"
            android:text="9"
            />
        <Button
            android:id="@+id/mul"
            android:backgroundTint="#CB0B6A81"
            android:layout_margin="3dp"
            android:onClick="OperatorEvent"
            android:text="*"
            />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu0"
            android:backgroundTint="#CB0B6A81"
            android:layout_margin="3dp"
            android:onClick="NumberEvent"
            android:text="0"
            />
        <Button
            android:id="@+id/div"
            android:backgroundTint="#CB0B6A81"
            android:layout_margin="3dp"
            android:onClick="OperatorEvent"
            android:text="/"
            />

        <Button
            android:id="@+id/equals"
            android:backgroundTint="#CB0B6A81"
            android:layout_margin="3dp"
            android:onClick="EqualEvent"
            android:text="="
            />

        <Button
            android:id="@+id/clr"
            android:backgroundTint="#CB0B6A81"
            android:layout_margin="3dp"
            android:onClick="NumberEvent"
            android:text="Clr"
            />


    </GridLayout>




</GridLayout>


